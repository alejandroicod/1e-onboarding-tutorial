.features-section
  min-height 500px
  background $back

  h2 
    text-align center
    font-size 3em

  .features-container
    margin -8px
    margin-bottom $spacer * 3

    .feature-container 
      min-width 250px
      padding $spacer

      h3 
        font-size 1.2em

      .feature-image 
        width 100%
        height 150px
        background $mid
        border-bottom-left-radius $spacer * 2
        border-top-right-radius $spacer * 2
        border-bottom 4px solid $secondary
        border 1px solid $primary
        overflow hidden 
        display flex
        align-items center

        img
          width 100%
          