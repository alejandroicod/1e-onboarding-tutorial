html, body
  padding 0
  margin 0
  height 100%
  width 100%
  color $fore

#main
  height calc(100% - 113px)
  padding-top 113px


.page-title
  text-align center
  border-bottom 1px solid $mid
  background $light
  top 64px
  position fixed
  width 100%
  padding-top $spacer * 0.5
  padding-bottom $spacer * 0.5
  z-index 1

  .content-wrapper
    padding-bottom 0

    h2
      font-size 18px
      line-height $spacer * 4
      margin 0


.content-right
  display flex
  justify-content flex-end